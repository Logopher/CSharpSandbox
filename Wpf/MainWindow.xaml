<Window x:Class="CSharpSandbox.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharpSandbox.Wpf"
        xmlns:simple="clr-namespace:Simple.Wpf.Terminal;assembly=Simple.Wpf.Terminal"
        xmlns:avalon="clr-namespace:ICSharpCode.AvalonEdit;assembly=ICSharpCode.AvalonEdit"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <avalon:TextEditor Grid.Row="0"
                           SyntaxHighlighting="PowerShell"
                           FontFamily="Consolas"
                           FontSize="10pt">
            Blah foo.
        </avalon:TextEditor>
        <simple:Terminal x:Name="Terminal"
                         Grid.Row="1"
                         Prompt="{Binding Prompt, Mode=OneWay}"
                         ItemsSource="{Binding Output, Mode=OneWay}"/>
    </Grid>
</Window>
